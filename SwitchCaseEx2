#include <stdio.h>
#include <stdlib.h>

int main (void) {
  int value;

  printf("Enter a value from 1 to 7: ");
  scanf("%d",&value);

  switch (value) {
    case 1: printf("\n***Sunday***\n");
    break;
    case 2: printf("\n***Monday***\n");
    break;
    case 3: printf("\n***Tuesday***\n");
    break;
    case 4: printf("\n***Wednesday***\n");
    break;
    case 5: printf("\n***Thursday***\n");
    break;
    case 6: printf("\n***Friday***\n");
    break;
    case 7: printf("\n***Saturday***\n");
    break;
    default: printf("\nInvalid value!!!\n");
  }
return 0;
}
