#include <stdio.h>
#include <stdlib.h>

int main() {
  int number;
  int bi[7];
  int aux;

  printf("Enter the decimal number: ");
  scanf("%d",&number);
  printf("\n***Conversion***\n\nDecimal -> Binary \n\n");
  printf("Decimal: %d \nBinary: ",number);
  for (aux = 7; aux >= 0; aux--) {
    if (number % 2 == 0) {
      bi[aux] = 0;
      number = number / 2;
    } else {
      bi[aux] = 1;
      number = number / 2;
      }
  }
  for (aux = 0; aux <= 7; aux++) {
     printf("%d",bi[aux]);
  }
  printf("\n");
return 0;
}
