/*Check whether the number entered by the user is even or odd.*/

#include <stdio.h>
#include <stdlib.h>

int main () {

int number;

  printf("\nEnter the number: ");
    scanf("%d",&number);
  
  if (number%2==0) {
    printf("\nThe number %d is even.\n.",number);
  } else {
    printf("\nThe number %d is odd.\n",number);
  }
return 0;
}
